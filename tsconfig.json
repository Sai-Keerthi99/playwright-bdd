{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "types": [
        "node",
        "playwright",
        "@types/node"
      ],
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    }
  }